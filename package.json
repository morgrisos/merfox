{
  "name": "merfox",
  "productName": "MerFox",
  "version": "0.34.0",
  "description": "Mercari Automation Tool",
  "main": "dist-electron/main-process/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:electron\"",
    "dev:server": "next dev -p 13337",
    "dev:electron": "wait-on tcp:13337 && tsc -p src/main-process/tsconfig.json && electron .",
    "typecheck": "tsc --noEmit",
    "build": "next build && tsc -p src/main-process/tsconfig.json && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build:ci": "next build && tsc -p src/main-process/tsconfig.json"
  },
  "dependencies": {
    "@types/papaparse": "^5.5.2",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.562.0",
    "next": "14.0.4",
    "node-machine-id": "^1.1.12",
    "papaparse": "^5.5.3",
    "playwright": "^1.40.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.merfox.app",
    "productName": "MerFox",
    "copyright": "Copyright Â© 2026 MerFox",
    "directories": {
      "output": "dist"
    },
    "extraMetadata": {
      "main": "dist-electron/main-process/main.js"
    },
    "files": [
      "dist-electron/**/*",
      "server/**/*",
      "public/**/*",
      "package.json",
      "src/lib/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "standalone/public"
      },
      {
        "from": ".next/static",
        "to": "standalone/.next/static"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "morgrisos",
        "repo": "merfox"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "afterPack": "./scripts/afterPack.js"
  }
}