{
  "name": "merfox",
  "productName": "MerFox",
  "version": "0.1.51",
  "description": "Mercari Automation Tool",
  "main": "dist_electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:electron\"",
    "dev:server": "next dev -p 13337",
    "dev:electron": "wait-on tcp:13337 && tsc -p src/electron/tsconfig.json && electron .",
    "build": "next build && tsc -p src/electron/tsconfig.json && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "next": "14.0.4",
    "playwright": "^1.40.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18"
  },
  "build": {
    "appId": "com.merfox.app",
    "productName": "MerFox",
    "copyright": "Copyright Â© 2026 MerFox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist_electron/**/*",
      "server/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json",
      "src/lib/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "morgrisos",
        "repo": "merfox"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}